@model IEnumerable<JournalControlWebApp.Models.dbo.Worker>

@{
    ViewData["Title"] = "Index";
}
    <h1>UserList</h1>
    <p>
        <a asp-action="CreateUser">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Family)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Otch)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Post)
                </th>
                <th>
                    Subunit
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sector)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsFirstLogin)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Family)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Otch)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Post)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sector.Subunit.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sector.SectorName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsFirstLogin)
                </td>
                <td>
                    <form asp-action="DeleteUser" asp-route-id="@item.Id" method="post" onsubmit="return confirm('Вы действительно хотите удалить пользователя @(item.UserName)?')">
                        <a asp-action="EditUser" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Изменить</a>
                        <a asp-action="ChangePassword" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Сбросить пароль</a>
                        <button asp-action="DeleteUser" type="submit" class="btn btn-sm btn-danger">Удалить</button>
                    </form>
                </td>
            </tr>
            }
        </tbody>
    </table>

